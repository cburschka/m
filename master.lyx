\begin_inset Formula 
\begin{eqnarray*}
\hat{\tau}\left(W\right) & = & W\\
\Sigma\left(\hat{\tau}g\right) & = & \begin{cases}
R\tau\bar{x} & \mathrm{für}\,\,\Sigma\left(g\right)=R\bar{x}\\
\Sigma\left(g\right) & \mathrm{sonst}
\end{cases}\\
\Omega\left(\tau\bar{x}\right) & = & \hat{\tau}\Omega\left(\bar{x}\right)\,\mathrm{für\,alle}\,\bar{x}\in U^{\mathrm{ar}\left(\mathcal{C}\right)}
\end{eqnarray*}

\end_inset


\end_layout

